@using System.Linq
@model IEnumerable<SharingKnowledge.ViewModels.OpenCoursesAllViewModel>

@{
    ViewData["Title"] = "Open Courses";
}

<h1 class="mb-4">Open Courses</h1>

@if (Model == null || !Model.Any())
{
    <div class="alert alert-info">No open courses available.</div>
}
else
{
    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
        @foreach (var course in Model)
        {
            <div class="col">
                <div class="card h-100 shadow-sm">
                    @if (!string.IsNullOrWhiteSpace(course.ImageUrl))
                    {
                        <img src="@course.ImageUrl" class="card-img-top" alt="@course.Title" style="object-fit:cover; height:180px;" />
                    }
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">@course.Title</h5>
                        <p class="card-text text-muted mb-2">
                            <small>
                                <span class="me-2"><strong>Starts:</strong> @course.StartDate.ToString("MMMM d, yyyy")</span>
                                <span class="badge bg-secondary">@course.CategoryName</span>
                            </small>
                        </p>
                        <p class="card-text">@course.Description</p>
                        <div class="mt-auto">
                            <a asp-controller="OpenCourses" asp-action="Details" asp-route-id="@course.Title" class="btn btn-primary">View details</a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}


