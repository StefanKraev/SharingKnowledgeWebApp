@model SharingKnowledge.ViewModels.Courses.OpenCoursesDetailsViewModel

@{
    ViewData["Title"] = Model?.Title ?? "Course details";
}

<div class="container py-4">
    <a asp-controller="OpenCourses" asp-action="Index" class="btn btn-link mb-3">&larr; Back to courses</a>

    <div class="card mb-4 shadow-sm">
        @if (!string.IsNullOrWhiteSpace(Model.ImageUrl))
        {
            <img src="@Model.ImageUrl" class="card-img-top" alt="@Model.Title" style="object-fit:cover; height:320px;" />
        }

        <div class="card-body">
            <h1 class="card-title">@Model.Title</h1>

            <p class="text-muted mb-2">
                <small>
                    <span class="me-3"><strong>Starts:</strong> @Model.StartDate.ToString("MMMM d, yyyy")</span>
                    <span class="badge bg-secondary">@Model.CategoryName</span>
                </small>
            </p>

            <hr />

            <div class="mb-3">
                <p class="card-text">@Model.Description</p>
            </div>

            <div class="d-flex gap-2">
                <a asp-controller="OpenCourses" asp-action="Index" class="btn btn-outline-secondary">Back</a>
            </div>
        </div>
    </div>
</div>
